# Routes
# This file defines all application routes (Higher priority routes first)


# IMPORTANT: Comments appended to a valid line are not permitted\
# IMPORTANT: Controllers are now injected, do not forget the '@' prefix
# ~~~~

###############################################################
# Toolkit related routes
###############################################################
# Index Page requested by user. Note that the controller is injected
GET         /                              @controllers.Application.index

# Websocket
GET         /ws                            @controllers.Application.ws


# Serve files
GET         /files/$jobid<[0-9]+>/:filename    @controllers.Application.file(filename  : String, jobid : Long)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.at(path="/public", file)

#GET        /toolkit             controllers.Assets.at(path="/public", file="index.html")
GET         /disclaimer                     @controllers.Application.disclaimer
GET         /contact                        @controllers.Application.contact
#GET         /footer              controllers.Application.footer

GET         /sections/:sectionname          @controllers.Application.section(sectionname : String)

###############################################################
# Tool specific routes
###############################################################
GET         /tools/:toolname                @controllers.Tool.show(toolname : String)
POST        /tools/:toolname/submit         @controllers.Tool.submit(toolname : String)

###############################################################
# Handels the result View (Determined by the status of the
# jobid provided
###############################################################
#GET         /results/$jobid<[0-9]+>         @controllers.User.result(jobid: Long)
# POST        /results/$jobid<[0-9]+>         @controllers.User.result(jobid: Long)
